<h2>Create a New Link</h2>

<form class="" action="<%= links_url %>" method="post">
  <%= auth_token %>

  <label>
    Title
    <input type="text" name="link[title]" value="<%= @link.title if @link %>">
  </label>

  <label>
    URL
    <input type="text" name="link[url]" value="<%= @link.url if @link %>">
  </label>

  <input type="submit" name="" value="Create New Link">
</form>
